---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="N Badges - Free collection of badges" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/png"
      href="https://cristhgunners.github.io/NBadges/favicon/favicon-48x48.png"
      sizes="48x48"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://cristhgunners.github.io/NBadges/favicon/favicon.svg"
    />
    <link
      rel="shortcut icon"
      href="https://cristhgunners.github.io/NBadges/favicon/favicon.ico"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="https://cristhgunners.github.io/NBadges/favicon/apple-touch-icon.png"
    />
    <link
      rel="manifest"
      href="https://cristhgunners.github.io/NBadges/favicon/site.webmanifest"
    />
    <meta name="msapplication-TileColor" content="#262626" />
    <meta name="theme-color" content="#262626" />
    <meta name="keywords" content="badges, icons, design, free, resource" />
    <meta name="author" content="CristhGunners" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content=`${title} - N Badges` />
    <meta
      property="og:description"
      content="N Badges - Free collection of badges"
    />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="N Badges" />
    <meta
      property="og:image"
      content="https://cristhgunners.github.io/NBadges/share.png"
    />
    <title>{title} - N Badges</title>
    <ViewTransitions />
  </head>
  <body class="bg-neutral-950">
    <div class="px-4">
      <div class="mx-auto max-w-6xl">
        <Header />
        <main>
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #0a0a0a;
  }
  /* Hide scrollbar */
  :root::-webkit-scrollbar {
    display: none;
  }
  :root {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
</style>
