import '@fontsource-variable/imbue';

interface Props {}

const {} = Astro.props;
---

<header class="flex flex-col items-center justify-center space-y-4 py-8">
  <h1 class="flex">
    <a
      href="https://cristhgunners.github.io/NBadges/"
      class=`rounded-2xl border border-neutral-700 bg-neutral-800 px-4 py-2 font-imbue text-4xl font-thin text-white hover:text-neutral-200`
      >N Badges</a
    >
  </h1>
  <div class="flex items-center justify-center space-x-4">
    <a
      href="https://cristhgunners.github.io/NBadges/badges/n-badges.zip"
      class="font-imbue text-2xl font-normal text-white hover:text-neutral-200"
